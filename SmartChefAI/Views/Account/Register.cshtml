@model SmartChefAI.ViewModels.Account.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    var perks = new[]
    {
        "Personal calorie target synced to the dashboard",
        "Unlimited meal saves with ingredient breakdowns",
        "Access to ChefAI + Dummy AI with one click"
    };
}

<section class="auth-hero animate-panel">
    <div class="animate-fade hero-copy">
        <div class="mode-chip">
            <span class="dot"></span>
            Join SmartChef
        </div>
        <h1 class="mb-3">Build your personalized kitchen assistant.</h1>
        <p class="lead mb-4">
            A free account keeps your ingredients, AI prompts, and calorie stats organized. Switch devices and pick up
            exactly where you left off.
        </p>
        <ul class="feature-list stacked">
            @foreach (var perk in perks)
            {
                <li>@perk</li>
            }
        </ul>
        <div class="auth-stats">
            <div>
                <strong>2k+</strong>
                <span class="small text-white-75">meals generated</span>
            </div>
            <div>
                <strong>98%</strong>
                <span class="small text-white-75">user satisfaction</span>
            </div>
            <div>
                <strong>Daily</strong>
                <span class="small text-white-75">calorie coaching</span>
            </div>
        </div>
    </div>
    <div class="auth-hint-card animate-fade delay-1">
        <p class="text-muted mb-1">Already have an account?</p>
        <a asp-action="Login" class="btn btn-outline-light w-100 mb-2">Sign in instead</a>
        <small class="text-white-50">Weâ€™ll keep your saved meals and logs untouched.</small>
    </div>
</section>

<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="auth-card animate-slide-up">
            <div class="auth-card-header">
                <h4>Create your profile</h4>
                <p class="mb-0 text-muted">Just a few details to personalize your dashboard.</p>
            </div>
            <form asp-action="Register" method="post" class="row g-3">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                <div class="col-12 col-md-6">
                    <label asp-for="DisplayName" class="form-label"></label>
                    <div class="input-icon">
                        <span class="icon material-icon">person</span>
                        <input asp-for="DisplayName" class="form-control" autocomplete="name" />
                    </div>
                    <span asp-validation-for="DisplayName" class="text-danger small"></span>
                </div>
                <div class="col-12 col-md-6">
                    <label asp-for="Email" class="form-label"></label>
                    <div class="input-icon">
                        <span class="icon material-icon">mail</span>
                        <input asp-for="Email" class="form-control" autocomplete="email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="col-12 col-md-6">
                    <label asp-for="Password" class="form-label"></label>
                    <div class="input-icon">
                        <span class="icon material-icon">lock</span>
                        <input asp-for="Password" class="form-control" autocomplete="new-password" />
                        <button type="button" class="toggle-visibility" data-target="@Html.IdFor(m => m.Password)">
                            <span class="material-icon">visibility</span>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="col-12 col-md-6">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <div class="input-icon">
                        <span class="icon material-icon">check</span>
                        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                        <button type="button" class="toggle-visibility" data-target="@Html.IdFor(m => m.ConfirmPassword)">
                            <span class="material-icon">visibility</span>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>
                <div class="col-12 col-md-6">
                    <label asp-for="DailyCalorieTarget" class="form-label"></label>
                    <div class="input-icon">
                        <span class="icon">kcal</span>
                        <input asp-for="DailyCalorieTarget" class="form-control" />
                    </div>
                    <span asp-validation-for="DailyCalorieTarget" class="text-danger small"></span>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary w-100">Create my account</button>
                </div>
                <div class="col-12 text-center">
                    <p class="mb-0">Already part of SmartChef? <a asp-action="Login">Sign in</a>.</p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelectorAll('.toggle-visibility').forEach(btn => {
            btn.addEventListener('click', () => {
                const targetId = btn.getAttribute('data-target');
                if (!targetId) return;
                const input = document.getElementById(targetId);
                if (!input) return;
                input.type = input.type === 'password' ? 'text' : 'password';
                const icon = btn.querySelector('.material-icon');
                if (icon) {
                    icon.textContent = input.type === 'password' ? 'visibility' : 'visibility_off';
                }
            });
        });
    </script>
}
