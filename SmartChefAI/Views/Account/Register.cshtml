@model SmartChefAI.ViewModels.Account.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="hero-panel">
    <h1 class="mb-2">Create an account</h1>
    <p class="text-muted-soft mb-0">Save your calorie preferences, generate smarter meals, and keep your favorite recipes in one place.</p>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card form-card p-4">
            <form asp-action="Register" method="post" class="row g-3">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-12">
                    <label asp-for="DisplayName" class="form-label"></label>
                    <input asp-for="DisplayName" class="form-control" />
                    <span asp-validation-for="DisplayName" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-6">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-6">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-6">
                    <label asp-for="DailyCalorieTarget" class="form-label"></label>
                    <input asp-for="DailyCalorieTarget" class="form-control" />
                    <span asp-validation-for="DailyCalorieTarget" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary w-100">Create my account</button>
                </div>
                <div class="col-12 text-center">
                    <p class="mb-0">Already have an account? <a asp-action="Login">Sign in</a>.</p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
